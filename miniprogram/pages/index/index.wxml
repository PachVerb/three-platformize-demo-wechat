<!--index.wxml-->
<view class="page">
  <view class="nav-bar">
    <view class="title">Three-Platformize 微信 Demo</view>
    <view class="menu" bindtap="onMenuClick">示例</view>
  </view>

  <view class="menu-can {{showMenu ? 'active' : ''}}">
    <view class="menu-item {{currItem === idx ? 'active' : ''}}" wx:for="{{menuList}}" wx:for-index="idx" wx:for-item="item" data-i="{{idx}}"wx:key="idx" data-item="{{item}}" bindtap="onMenuItemClick">{{item}}</view>
  </view>

  <canvas class="canvas {{showCanvas ? '' : 'hide'}}" id="gl" type="webgl" bindtouchstart="onTS" bindtouchmove="onTM" bindtouchend="onTE"></canvas>
</view>